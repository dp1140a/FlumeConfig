        },
        "accessToken": {
            "name": "accessToken",
            "printName": "Access Token",
            "value": "",
            "valueType": "String",
            "required": true,
            "description": "OAuth access token"
        },
        "accessTokenSecret": {
            "name": "accessTokenSecret",
            "printName": "Access Token Secret",
            "value": "",
            "valueType": "String",
            "required": true,
